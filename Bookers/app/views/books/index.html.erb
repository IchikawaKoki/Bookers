<p id="notice">
  <%= notice %>
</p>

<div class="indexbook">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th class="table-blank"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show",book_path(book.id),class:"link" %></td>
        <td><%= link_to "Edit",edit_book_path(book.id),class:"link" %></td>
        <td><%= link_to "Destroy","/books/#{book.id}",method: :delete,"data-confirm"=>"Are you sure?",class:"link" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="newbook">
  <h2>New Book</h2>

  <% if @book.errors.any? %>
  <div id="error-explanation">
    <h2><%= @book.errors.count %> errors prohibit this book from being saved.</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

  <%= form_with model:@book,local:true do |f| %>
   <div class="field">
     <p>Title</p>
     <%= f.text_field:title %>
   </div>
   <div class="field">
     <p>Body</p>
     <%= f.text_area:body %>
   </div>
   <div class="action">
     <%= f.submit "Create Book" %>
   </div>
  <% end %>
</div>
