<div class="editbook">
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <div id="error-explanation">
    <h2><%= @book.errors.count %> errors prohibit this book from being saved.</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

  <%= form_with model:@book,local:true do |f| %>
   <div class="field">
     <p>Title</p>
     <%= f.text_field:title %>
   </div>
   <div class="field">
     <p>Body</p>
     <%= f.text_area:body %>
   </div>
   <div class="action">
     <%= f.submit "Update Book" %>
   </div>
  <% end %>
</div>
<%= link_to "Show",book_path(@book.id),class:"link" %>
 |
<%= link_to "Back",books_path,class:"link" %>